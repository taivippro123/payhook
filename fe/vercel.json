{
    "redirects": [
        {
            "source": "/(.*)",
            "has": [
                { "type": "host", "value": "payhook.vercel.app" }
            ],
            "destination": "https://www.payhook.codes/$1",
            "permanent": true
        },
        {
            "source": "/(.*)",
            "has": [
                { "type": "host", "value": "payhook.codes" }
            ],
            "destination": "https://www.payhook.codes/$1",
            "permanent": true
        }
    ],
    "rewrites": [
        { 
            "source": "/((?!sitemap\\.xml|robots\\.txt|favicon\\.ico|.*\\.png|.*\\.svg|.*\\.webmanifest).*)", 
            "destination": "/index.html" 
        }
    ],
    "headers": [
        {
            "source": "/sitemap.xml",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/xml; charset=utf-8"
                }
            ]
        },
        {
            "source": "/robots.txt",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "text/plain; charset=utf-8"
                }
            ]
        }
    ]
}